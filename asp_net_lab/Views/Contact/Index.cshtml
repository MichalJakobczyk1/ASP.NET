@model List<Lab1.Models.ContactModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Imię</th>
                <th scope="col">Wiek</th>
                <th scope="col">Email</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var contact in @Model)
        {
            <tr>
                <td>
                    @contact.Name
                </td>
                <td>
                    @contact.Age
                </td>
                <td>
                    @contact.Email
                </td>
                <td>
                    <a class="btn btn-danger" button asp-action="Delete" asp-route-id=@contact.Id>
                        Usuń
                    </a>
                    <a class="btn btn-success" button asp-action="EditContact" asp-route-id=@contact.Id>
                        Edytuj
                    </a>
                </td>
            </tr>
        }
        </tbody>    
    </table>
    <a class="btn btn-primary" button asp-action="AddContact">
        Dodaj kontakt
    </a>
</div>
