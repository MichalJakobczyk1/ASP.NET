<form action="Calc">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <input type="number" name="Number1" placeholder="First number" class="form-control mb-3"/>
            <input type="number" name="Number2" placeholder="Second number" class="form-control mb-3"/>

            <select name="Operation" id="cars" class="form-control mb-3">
                <option value="add">Add</option>
                <option value="subtract">Substract</option>
                <option value="multiply">Multiply</option>
                <option value="divide">Divide</option>
            </select>

            <button class="btn btn-primary mb-2">Submit</button>

            <p>@ViewBag.Result</p>
        </div>
    </div>
</form>